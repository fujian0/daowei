@import "./public.styl"
@import "./mixins.styl"
body
  text-align center
  .home-header.fixed
    min-width 1200px
    background rgba(255,255,255,.8)
    position fixed
    z-index 100
    top 0
    left 0
    right 0
    opacity 0
    height 0
    overflow hidden
    box-shadow 0 2px 10px #555
    &.show
      transition .8s
      height 70px
      opacity 1
.home-header
  border-bottom 1px solid #e5e5e5
  width 100%
  white-space: nowrap;
  margin 0 auto
  .header-box
    height 40px
    display flex
    padding 10px 20px 20px
    .header-logo
      margin-left 120px
      width 220px
    .nav-list
      display flex
      align-items center
      height 100%
      line-height 40px
      .nav-item
        &:hover
          a
            color red
            transition .5s
        a
          color #121212
        font-weight bold
        height 100%
        width 100%
        margin-left 60px
        .nav-link
          height 100%
          &.on
            color #db3a34
      .nav-item.city
        //width 100%
        margin 0 50px 0 120px
        &:hover
          .switch
            color red
          .city
            color #121212
        .icon
          margin-right -5px
          margin-top -1px
      .nav-item.shangjia
        .nav-link
          height 30px
          padding 0 5px
          background red
          line-height 30px
          border-radius 4px
          margin-top 5px
          color #ffffff
.home-content
  .banner_wrapper
    width 100%
    position relative
    .swiper-container
      width 100%
      height 420px
      .swiper-wrapper
        width 100%
        height 100%
        .swiper-slide
          width 100%
          height 100%
          .banner_bd
            width 100%
            height 100%
            &.bd1
              background url("../images/banner1.jpg") center center no-repeat
            &.bd2
              background url("../images/banner2.jpg") center center no-repeat
            &.bd3
              background url("../images/banner3.jpg") center center no-repeat



